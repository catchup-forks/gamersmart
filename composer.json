{
	"name": "speedovation/laravelmart",
	"description": "LaravelMart - eCommerce platform.",
	"keywords": ["ecommerce","platform", "laravelmart","laravel e-commerce","admin dashboard","shop package"],
	"license": "MIT",
	"type": "project",
	"config": {
		"preferred-install": "dist"
	},
  "minimum-stability": "dev",
  "prefer-stable": true,
	"require": {
		"laravel/framework": "^5.2",
		"gloudemans/shoppingcart": "^1.3",
		"fzaninotto/faker": "^1.5",
		"laravelcollective/html": "^5.0",
		"filp/whoops": "^1.0",
		"laravel/socialite": "~2.0",
		"zizaco/entrust": "dev-laravel-5",
		"yajra/laravel-datatables-oracle": "^6.0",
		"league/fractal": "^0.13.0@dev",
  	"laracasts/flash": "^1.3",
		"ezyang/htmlpurifier": "dev-master",
		"roumen/sitemap": "dev-master",
		"rtconner/laravel-tagging": "^2.0"

	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"mockery/mockery": "0.9.*",
		"laracasts/generators": "^1.1",
		"mitulgolakiya/laravel-api-generator": "dev-master"
	},
	"autoload": {
		"classmap": [
			"database",
            "app/Models"
		],
		"psr-4": {
			"App\\": "app/"
		},
		"files" : [
			"app/Helpers/Common.php"
		]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	}
}
